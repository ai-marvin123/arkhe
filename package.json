{
  "name": "arkhe",
  "displayName": "arkhe",
  "description": "AI Agent to visualize your idea",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "arkhe.helloWorld",
        "title": "Arkhe"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "build:webview": "cd webview-ui && npm run build",
    "watch:webview": "cd webview-ui && npm run build -- --watch",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.46.3",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
