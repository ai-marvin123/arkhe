{
  "name": "arkhe",
  "displayName": "Arkhe",
  "description": "Visualize. Collaborate. Evolve.",
  "version": "1.0.0",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "arkhe.openChat",
        "title": "Arkhe: Open Chat"
      }
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/ai-marvin123/arkhe.git"
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package-ext && npm run build:webview",
    "package-ext": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "compile": "tsc -b",
    "build:webview": "cd webview-ui && npm run build",
    "watch:webview": "cd webview-ui && npm run build -- --watch",
    "watch": "tsc -b -w",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/mermaid": "^9.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.19.1",
    "@types/vscode": "^1.106.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.1",
    "happy-dom": "^20.0.11",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "@langchain/core": "^1.1.1",
    "@langchain/openai": "^1.1.3",
    "dotenv": "^17.2.3",
    "ignore": "^7.0.5",
    "jsdom": "^27.3.0",
    "langchain": "^1.1.2",
    "mermaid": "^11.12.2",
    "zod": "^4.1.13"
  }
}
