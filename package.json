{
  "name": "arkhe",
  "displayName": "arkhe",
  "description": "AI Agent to visualize your idea",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:arkhe.helloWorld"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "arkhe.helloWorld",
        "title": "Arkhe"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "build:webview": "cd webview-ui && npm run build",
    "watch:webview": "cd webview-ui && npm run build -- --watch",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mermaid": "^9.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.19.1",
    "@types/vscode": "^1.106.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "22": "^0.0.0",
    "@langchain/core": "^1.1.1",
    "@langchain/google-genai": "^2.0.1",
    "@langchain/openai": "^1.1.3",
    "dotenv": "^17.2.3",
    "langchain": "^1.1.2",
    "mermaid": "^11.12.2",
    "zod": "^4.1.13"
  }
}
