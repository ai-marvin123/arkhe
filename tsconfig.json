{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",

    "outDir": "out",

    "rootDir": "src",

    "sourceMap": true,
    "strict": true,

    // "baseUrl": ".",
    // "paths": { ... },

    "skipLibCheck": true,
    "noUnusedLocals": false,
    "forceConsistentCasingInFileNames": true
  },

  "include": ["src/**/*"],

  "exclude": ["node_modules", ".vscode-test", "webview-ui", "out", "dist"]
}
